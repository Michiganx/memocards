<% provide(:title, @user.name + "'s page") %>


<h1>user page</h1>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>, <%= @user.email%>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.decks.any? %>
        <h3>decks (<%= @user.decks.count %>)</h3>
        <ol class="decks">
          <%= render @decks %>
        </ol>
        <%= will_paginate @decks %>
    <% end %>
  </div>

</div>